
<p id="notice"><%= notice %></p>

<h1>Games</h1>

<table>
  <thead>
    <tr>
      <th>#</th>
      <th>Game point</th>
      <th>Team</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @team.games.order(:game_point).each do |game, index| %>
      <tr>
        <td><%= index.to_i %></td>
        <td><%= game.game_point %></td>
        <td><%= game.team.name%></td>
        <td><%= link_to 'Show', team_game_path(game.team_id, game.id) %></td>
        <td><%= link_to 'Edit', edit_team_game_path(game.team_id, game.id) %></td>
        <td><%= link_to 'Destroy', team_game_path(game.team_id, game.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

